# Token del bot de Telegram (obtener de @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID del chat de Telegram (tu ID de usuario)
TELEGRAM_CHAT_ID=your_chat_id_here

# Umbral de índice UV considerado peligroso (por defecto 6)
UV_THRESHOLD=6

# Tipo de piel (1-6)
# 1: Muy clara (se quema siempre, nunca se broncea)
# 2: Clara (se quema fácilmente, se broncea mínimamente)
# 3: Media (se quema moderadamente, se broncea gradualmente)
# 4: Morena (se quema mínimamente, se broncea bien)
# 5: Muy morena (raramente se quema, se broncea profundamente)
# 6: Negra (nunca se quema)
SKIN_TYPE=2

# Intervalo de verificación en minutos
CHECK_INTERVAL_MINUTES=30

# Usuario de Docker Hub (solo para build-and-push.sh)
DOCKER_USERNAME=tu_usuario_dockerhub

# API UV (Opcional - para mayor confiabilidad)
# Obtener gratis en: https://www.openuv.io/dashboard
OPENUV_API_KEY=your_openuv_api_key_here

# No se requieren API keys obligatorias
# El sistema usa CurrentUVIndex.com como principal y OpenUV como respaldo